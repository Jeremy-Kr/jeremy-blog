---
import Layout from "../../layouts/Layout.astro";
import { BlogService } from "../../services/BlogService";

export async function getStaticPaths() {
  const blogService = new BlogService();
  const publishedPosts = (await blogService.fetchAllPosts()).filterPublished().getPosts();

  return publishedPosts.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <article class="container mx-auto px-4 py-12">
    <h1 class="text-4xl font-bold mb-4">{entry.data.title}</h1>
    <p class="text-gray-400 mb-8">{entry.data.date} | {entry.data.category}</p>
    <div class="prose prose-invert prose-lg max-w-none">
      <Content />
    </div>
  </article>
</Layout>

<style is:global>
  .prose {
    @apply max-w-none;
  }
  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    @apply text-white;
  }
  .prose p,
  .prose li,
  .prose ol {
    @apply text-gray-300;
  }
  .prose a {
    @apply text-primary hover:underline;
  }
  .prose blockquote {
    @apply border-l-4 border-gray-500 pl-4 italic;
  }
  .prose code {
    @apply bg-gray-800 rounded px-1;
  }
  .prose pre {
    @apply bg-gray-800 rounded p-4 overflow-x-auto;
  }
</style>
