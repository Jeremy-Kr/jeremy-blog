---
import { Icon } from "astro-icon/components";

export interface Props {
  navItems: { name: string; href: string }[];
}

const { navItems } = Astro.props;
---

<div
  id="mobile-menu-backdrop"
  class="fixed inset-0 bg-black bg-opacity-50 z-40 hidden transition-opacity duration-300"
>
</div>

<div
  id="mobile-menu"
  class="fixed top-0 right-0 w-full max-w-sm h-full bg-gray-900 shadow-md z-50 transition-transform duration-300 ease-in-out transform translate-x-full overflow-y-auto"
>
  <div class="container mx-auto px-4 py-4">
    <button
      id="close-menu"
      class="absolute top-4 right-4 text-gray-400 hover:text-primary transition duration-300"
    >
      <Icon name="mdi:close" class="w-6 h-6" />
    </button>
    <nav class="mt-16">
      {
        navItems.map((item) => (
          <a
            href={item.href}
            class="block py-2 text-gray-400 hover:text-primary transition duration-300"
          >
            {item.name}
          </a>
        ))
      }
    </nav>
  </div>
</div>

<script>
  import "../scripts/mobileMenu.ts";
</script>
